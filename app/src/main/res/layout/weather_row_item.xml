<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="WeatherRowBinding">

        <variable
            name="weatherViewModel"
            type="com.example.akshith.weatherapp.presentation.WeatherViewModel" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            style="@style/WeatherRowItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@{weatherViewModel.city}"
            tools:text="city:Kansas City" />

        <TextView
            style="@style/WeatherRowItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@{weatherViewModel.dateTime}"
            tools:text="Date&amp;time:06-20-2018 10:00:00" />

        <TextView
            style="@style/WeatherRowItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@{weatherViewModel.currentTemperature}"
            tools:text="now:260.00" />

        <TextView
            style="@style/WeatherRowItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@{weatherViewModel.maxTemperature}"
            tools:text="max:280.00" />

        <TextView
            style="@style/WeatherRowItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@{weatherViewModel.minTemperature}"
            tools:text="min:220.00" />

    </LinearLayout>
</layout>
